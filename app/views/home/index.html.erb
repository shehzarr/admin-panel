<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <% if user_signed_in? %>
        <div class="card">
          <div class="card-body text-center">
            <h2>Welcome <%= current_user.email %></h2>
            <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: 'btn btn-danger mt-3' %>
          </div>
        </div>
        <div class="card mt-3">
          <div class="card-body text-center">
            <h1>Hello from Home!</h1>
            <%= button_to "Proceed to Payment", new_payment_path, method: :get, class: 'btn btn-primary btn-block mt-3' %>
          </div>
        </div>
      <% else %>
        <div class="card">
          <div class="card-body text-center">
            <h3>Please Setup your Account</h3>
            <%= button_to "Sign in", new_user_session_path, class: 'btn btn-primary btn-block' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
